import java.util.List;


public class Product {
    /** the selling price of each size */
    public List<Double> price;

    /** the buying cost of each size */
    public List<Double> cost;
    
    /** the name of the product */
    public String name;
    
    /** the amount of this product ordered in total */
    public int orderTotal;
    
    Product() {
    }
    
    public Product(String name, List<Double> price1, List<Double> cost){
   	 this.name = name;
   	 this.price = price1;
   	 this.cost = cost;
    }
    
    public String toString() {
   	 return name + " has been sold " + orderTotal + " times";
    }
}

